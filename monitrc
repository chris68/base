set daemon  60           # Poll at 2-minute intervals
set logfile syslog facility log_daemon # Set syslog logging 
                                        # (facility LOG_DAEMON)

set mailserver localhost
set mail-format           # Set a default mail from-address for
  { 
    subject: Monit system notification
    from: postmaster@mailwitch.com
  }  # all alert messages emitted by monit
  
set alert prod_monit@mailwitch.com  with reminder on 100 cycles # Send alert to system admin on any event (with reminder)

set eventqueue
      basedir /var/monit
      slots 5000
      
#System checks

check system h2397470
	if memory usage > 80% for 2 cycles then alert
	if cpu usage (user) > 70% for 2 cycles then alert
        if cpu usage (system) > 30% then alert
 	if cpu usage (wait) > 20% then alert
	if loadavg (1min) > 6 for 2 cycles then alert 
	if loadavg (5min) > 4 for 2 cycles then alert
	if swap usage > 5% then alert

#Log files

check file syslog.log with path 
  if match "Fatal error" then alert

# check file system
check filesystem rootfs with path /
       if space usage > 80% then alert
       
check device rootfs with path /dev/vzfs
  if space usage > 70% then alert
  if space usage > 80% then alert
  if space usage > 90% then alert
  if space usage > 95% then alert

#Important base processes
  
  check process postgresql with pidfile /var/run/postgresql/9.3-main.pid
    group server
    start program = "service postgresql-9.3 start"
    stop program = "service postgresql-9.3 stop"

  check process postfix with pidfile /var/spool/postfix/pid/master.pid
    group server
    start program = "service postfix start"
    stop program = "service postfix stop"
    depends on postgresql
  
  check process apache with pidfile /var/run/apache2/apache2.pid
    group server
    start program = "service apache2 start"
    stop program = " service apache2 stop"
    depends on postgresql

